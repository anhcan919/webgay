extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Phần khai báo body
block body
	//- Bạn viết code vào đây nhớ là phải mở đầu bằng section ở mỗi khối
	//- Đây là phần home slider
	section.home_slider
		.item
			img(src="./img/home_slide1.png", alt="")
			.title
				.container
					.row
						.col-md-8.col-lg-4
							h1 Chúng tôi là <br> FullStack Việt Nam
							p Lorem ipsum dolor sit amet consectetur adipisicing elit. Repellat consequatur culpa quam officiis, reprehenderit qui recusandae velit laboriosam modi illum.
							a.btn.btn-light Xem chi tiết
	section.home_banner1
		.owl-carousel.owl-theme
			- for (x=1;x<4;x++)
				.container
					.row
						.col
							img.img-fluid(src="./img/home_banner_1.png", alt="")
							.text1
								h2 USA'S HOTTEST JEANS
							.text2
								p SHOPPING NOW
	//-Kết thúc phần home banner 1 tại đây
	//-//////////////////
	//- Đây là phần shop mũi khoan
	section.home_shop
		.container
			.row
				.col
					h3 FULLSTACK VIETNAM
					.row
						- for(x=1;x<5;x++)
							.col-sm-6.col-md-6.col-lg-3
								.item
									a(href="")
										figure
											.blockimg
												img.img-fluid(src="./img/home_muikhoan"+x+".png", alt="")
											figcaption
												h2 TRUNG TÂM ĐÀO TẠO IT CHUYÊN NGHIỆP
												.price $36.59
	//-Kết thúc phần shop mũi khoan =))
	//-///////////////////
	//-Phần banner 2
	section.home_banner2
		.container
			.row
				.col
					.item
						a(href="")
							figure
								img.img-fluid(src="./img/home_banner_2.png", alt="")
							.text
								h3 HẠNH PHÚC PHÍA SAU
								p USA'S HOTTEST JEANS
							.sale
								span Sale </br> 20%
	//-Kết thúc phần banner 2
	//-////////////////
	//-Phần Gay @@
	section.home_gay
		.container
			.row
				.col-md-5.text-center
					figure
						img.img-fluid(src="./img/home_gay.png", alt="")
				.col-md-7.text-center
					.title
						h3 HẠNH PHÚC PHÍA SAU
						p Want the most stylish designs in metrosexual and gay apparel? Looking for the sexiest gay outfits and pride outfits? Differio has the trendiest gay pride apparel from gay pride clothing to lgbt clothing. Shop our gay menswear collection for the hottest gay pride outfits in gay clothing for men.
	//-Kết thúc phần gay
	//-/////////////
	//-Phần logo clients
	section.home_clients
		.container
			.row
				.col
					h3 FULLSTACK VIETNAM
			.row
				.col
					.owl-carousel.owl-theme
						- for(x=1;x<13;x++)
							.item
								img(src="./img/clients_"+x+".png", alt="")
	//-Kết thúc phần clients
	//-/////////////////
		

						
